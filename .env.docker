# Cognee Docker Configuration

################################################################################
# üß† LLM Settings - Using Ollama in Docker
################################################################################

# Ollama LLM Configuration
LLM_API_KEY="ollama"
LLM_MODEL="llama3.2:3b"
LLM_PROVIDER="ollama"
# Using Docker service name for internal networking
LLM_ENDPOINT="http://ollama:11434/v1"
LLM_MAX_TOKENS="4096"

# Ollama Embedding Configuration
EMBEDDING_PROVIDER="ollama"
EMBEDDING_MODEL="nomic-embed-text"
# Using Docker service name for internal networking
EMBEDDING_ENDPOINT="http://ollama:11434/api/embeddings"
EMBEDDING_DIMENSIONS=768
EMBEDDING_MAX_TOKENS=8192
HUGGINGFACE_TOKENIZER="sentence-transformers/all-MiniLM-L6-v2"

################################################################################
# üóÑÔ∏è Database Settings
################################################################################

# PostgreSQL Configuration (instead of SQLite for production)
DB_PROVIDER="postgres"
DB_HOST="postgres"
DB_PORT="5432"
DB_NAME="cognee_db"
DB_USER="cognee"
DB_PASSWORD="cognee_password"

# Graph Database (using default file-based)
GRAPH_DATABASE_PROVIDER="kuzu"

# Vector Database (using default file-based)
VECTOR_DB_PROVIDER="lancedb"

################################################################################
# üì¶ Redis Cache Settings
################################################################################

REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_DB="0"
CACHE_ENABLED="true"

################################################################################
# üîí Security Settings
################################################################################

# Allow local file access for development
ACCEPT_LOCAL_FILE_PATH=True
ALLOW_HTTP_REQUESTS=True
ENABLE_BACKEND_ACCESS_CONTROL=False

################################################################################
# üõ†Ô∏è Development Settings
################################################################################

ENV="production"
TOKENIZERS_PARALLELISM="false"
LITELLM_LOG="ERROR"
LOG_LEVEL="INFO"

# API Settings
API_HOST="0.0.0.0"
API_PORT="8000"

# Telemetry
TELEMETRY_DISABLED=1